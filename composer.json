{
  "name": "krisumaru/rest-client",
  "description": "Lightweight REST client for Codelabs task",
  "type": "library",
  "require": {
    "php": "^8.0",
    "guzzlehttp/guzzle": "^7.0",
    "guzzlehttp/psr7": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "rekrutacja4\\RestClient\\": "src/"
    }
  },
  "license": "MIT",
  "require-dev": {
    "phpstan/phpstan": "^1.12",
    "phpunit/phpunit": "^9.5"
  },
  "scripts": {
    "phpstan": "vendor/bin/phpstan analyse -c phpstan.neon",
    "unit": "vendor/bin/phpunit -c phpunit.xml.dist"
  }
}
